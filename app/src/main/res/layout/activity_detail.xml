<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">

    <ImageView
        android:id="@+id/ivArtImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvArtTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:gravity="center_horizontal"
        android:text="Detail Page"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivArtImage" />

    <TextView
        android:id="@+id/tvMediumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Medium:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvArtTitle" />

    <TextView
        android:id="@+id/tvRegionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Region:"
        app:layout_constraintStart_toStartOf="@+id/tvMediumTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvMediumTitle" />

    <TextView
        android:id="@+id/tvPhysicalDescriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Physical Description:"
        android:textColor="@color/color_primary_dark"
        app:layout_constraintStart_toStartOf="@+id/tvArtistTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvArtistTitle" />

    <TextView
        android:id="@+id/tvMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMediumTitle" />

    <TextView
        android:id="@+id/tvRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tvRegionTitle"
        app:layout_constraintEnd_toEndOf="@+id/tvMedium" />

    <TextView
        android:id="@+id/tvPhysicalDescription"
        android:layout_width="57dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/color_primary_dark"
        app:layout_constraintStart_toStartOf="@+id/tvPhysicalDescriptionTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvPhysicalDescriptionTitle" />

    <TextView
        android:id="@+id/tvArtistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Artist:"
        app:layout_constraintStart_toStartOf="@+id/tvRegionTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvRegionTitle" />

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tvArtistTitle"
        app:layout_constraintEnd_toEndOf="@+id/tvRegion" />

</androidx.constraintlayout.widget.ConstraintLayout>